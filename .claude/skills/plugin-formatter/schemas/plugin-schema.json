{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Schema",
  "type": "object",
  "required": ["name", "version", "description", "author"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Plugin name in lowercase with hyphens"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 0.1.0)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Brief plugin description"
    },
    "author": {
      "oneOf": [
        {
          "type": "string",
          "description": "Author name as string (will be converted to object)"
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {"type": "string"},
            "url": {"type": "string", "format": "uri"}
          }
        }
      ]
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "license": {
      "type": "string",
      "enum": ["MIT", "Apache-2.0", "GPL-3.0", "BSD-3-Clause", "CC-BY-SA", "Unlicense"]
    },
    "keywords": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "agents": {
      "type": "string",
      "pattern": "^\\./agents/.*\\.md$"
    },
    "skills": {
      "type": "string",
      "pattern": "^\\./skills$"
    }
  }
}
