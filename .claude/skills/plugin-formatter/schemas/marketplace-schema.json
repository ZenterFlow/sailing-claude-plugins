{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Marketplace Schema",
  "type": "object",
  "required": ["name", "owner", "description", "version", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "owner": {
      "oneOf": [
        {
          "type": "string",
          "description": "Owner name as string (will be converted to object)"
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {"type": "string"}
          }
        }
      ]
    },
    "description": {
      "type": "string",
      "minLength": 20
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source", "description", "version", "author", "keywords", "category"],
        "properties": {
          "name": {"type": "string", "pattern": "^[a-z0-9-]+$"},
          "source": {"type": "string"},
          "description": {"type": "string"},
          "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
          "author": {
            "oneOf": [
              {
                "type": "string",
                "description": "Author name as string (will be converted to object)"
              },
              {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {"type": "string"}
                }
              }
            ]
          },
          "keywords": {
            "type": "array",
            "items": {"type": "string"}
          },
          "category": {
            "type": "string",
            "enum": ["navigation", "weather", "regulations", "safety", "education", "tools"]
          }
        }
      }
    }
  }
}
